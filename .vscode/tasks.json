{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-I${workspaceFolder}\\header\\",
				"-I${workspaceFolder}\\include\\",
				"-I${workspaceFolder}\\include\\InSDL\\",
				"-L${workspaceFolder}\\lib\\",
				"-lSDL3",
				"-lSDL3_ttf",
				"-lSDL3_Image",
				"-o",
				"${workspaceFolder}\\build\\${fileBasenameNoExtension}_build.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "build static",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-I${workspaceFolder}\\header\\",
				"-I${workspaceFolder}\\include\\",
				"-I${workspaceFolder}\\include\\InSDL\\",
				"-L${workspaceFolder}\\lib\\",
				"-lSDL3",
				"-lSDL3_ttf",
				"-lSDL3_Image",
				"-lm",
				"-lkernel32",
				"-luser32",
				"-lgdi32",
				"-lwinmm",
				"-limm32",
				"-lole32",
				"-loleaut32",
				"-lversion",
				"-luuid",
				"-ladvapi32",
				"-lsetupapi",
				"-lshell32",
				"-ldinput8",
				"-o",
				"${workspaceFolder}\\build\\${fileBasenameNoExtension}_static_build.exe",
				"-static",
				"-mwindows"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}